gemspec

gem 'rake', '~> 13.0'

group :development do
  # Testing
  gem 'rspec', '~> 3.9'
  
  # Testing sinatra apps
  gem 'rack-test', '~> 1.1'

  # yard for docs, redcarpet for allowing ``` in markup
  gem 'redcarpet'
  gem 'yard', '~> 0.9.25'

  # Shows suggested methods
  gem 'solargraph'

  # Lint Tool
  gem 'rubocop'

  # used for test app
  gem 'sinatra'
end
